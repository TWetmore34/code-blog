<div class="user-info">
    <div class="card">
        <div class="card-header bg-new">
        <h3>Profile Name: {{name}}</h3>
        </div>
        <div id="email-parent" class="card-body">
            <h5 class="inline mx-3 p-3">
                email: <span id='email'>{{email}}</span>
            </h5>
            <button id="submit" class="btn btn-secondary inline">Update</button>
        </div>
        <div class="card-header bg-new">
        <h3>New Post</h3>
        </div>
        <div id="email-parent" class="card-body">
            <form action="" class="">
                <label class="left" for="post-title">
                    <h3>Title</h3>
                </label>
                <input id="post-title" class="w-75 block mx-auto my-2" type="text">
                <label class="left" for="post-content">
                    <h3>Post Body</h3>
                </label>
                <textarea class="textarea w-75 block mx-auto mb-2" id="post-content" cols="30" rows="10"></textarea>
                <button id="post" class="btn btn-secondary w-75 mx-auto inline block">Post</button>
            </form>
        </div>
            <div class="card">
                <div class="card-header bg-new">
                    <h3>My Posts</h3>
                    {{#if posts}}
                    {{#each posts as |post|}}
                <div class="card-body text-center bg-light">
                <h3>
                    <a class="text-dark card-title" href="/post/{{post.id}}">
                    {{post.title}}
                    </a>

                    </h3>
                    <p class="card-text">{{dateTime post.createdAt}}</p>
                    <ul>
                        <li>
                        <i id="{{post.id}}" class="size-up delete-me">&#x2421;</i>
                        </li>
                        <li>
                            <a href="/post/update/{{post.id}}" class="text-dark">
                            &#8635;
                            </a>
                        </li>
                    </ul>
                    <hr>
            </div>
            {{/each}}

            {{else}}
            <div class="card-body text-center bg-light">
                <h3>add a post!</h3>
            </div>
            {{/if}}
            </div>

            <div class="card-header bg-new">
                <h3>My comments</h3>
            {{#if Comments}}
            {{#each Comments as |comment|}}
            <div class="card-body text-center bg-light">
                <h3>
                    <a class="text-dark card-title" href="/post/{{post.id}}">
                    {{comment.content}}
                    </a>

                    </h3>
                    <p class="card-text">{{dateTime comment.createdAt}}</p>
                    <ul>
                        <li>
                        <i id="{{comment.id}}" class="size-up delete-me">&#x2421;</i>
                        </li>
                        <li>
                            <a href="/comment/update/{{comment.id}}" class="text-dark">
                            &#8635;
                            </a>
                        </li>
                    </ul>
                    <hr>
            </div>
            {{/each}}
            {{else}}
            <div class="card-body text-center bg-light">
                <h3>add a Comment!</h3>
            </div>
            {{/if}}
            </div>
            </div>
    </div>
</div>
<script src="/js/updateUser.js"></script>